<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SauceDemo testNG Test Suite">

    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.saucedemo.tests.LoginTests"/>
            <class name="com.saucedemo.tests.ProductsTest"/>
        </classes>
    </test>

    <test name="Regression Tests">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="com.saucedemo.tests.LoginTests"/>
            <class name="com.saucedemo.tests.ProductsTest"/>
<!--            <class name="com.saucedemo.tests.CartTest">-->
<!--            <class name="com.saucedemo.tests.CheckoutTest"/>-->
        </classes>
    </test>

</suite>